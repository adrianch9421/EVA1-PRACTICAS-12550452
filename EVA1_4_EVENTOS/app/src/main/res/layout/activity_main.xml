    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context="com.example.adrianch.eva1_4_eventos.MainActivity">

    <Button
        android:id="@+id/miClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="miClick"
        android:text="CLICK POR XML" />

    <Button
        android:id="@+id/btnClickList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="OnClickListener" />

    <Button
        android:text="CLASEA ANONIMA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnClaseAnonima" />

</LinearLayout>
